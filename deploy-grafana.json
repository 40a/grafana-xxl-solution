{
  "kind": "Deployment",
  "metadata": {
    "name": "${GRAFANA_DEPLOY_NAME}-${GRAFANA_DEPLOY_HASH}"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "${GRAFANA_DEPLOY_NAME}"
        },
        "name": "${GRAFANA_DEPLOY_NAME}-${GRAFANA_DEPLOY_HASH}"
      },
      "spec": {
        "containers": [
          {
            "env": [
              
              {
                "name": "GF_SERVER_ROOT_URL",
                "value": "${GRAFANA_PASSWORD}"
              }
           ],
            "image": "${GRAFANA_IMAGE}",
            "name": "${GRAFANA_DEPLOY_NAME}",
            "resources": {
              "requests": {
                "cpu": "150m",
                "memory": "150Mi"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "${GRAFANADATA}",
                "name": "default-volume",
                "subPath": "${GRAFANA_DEPLOY_NAME}-${GRAFANA_DEPLOY_HASH}${GRAFANADATA}"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "default-volume"
          }
        ]
      }
    }
  }
}
